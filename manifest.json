{

    "name" : "Color Picker",

    "description" : "An extension to help to Pick the color from web pages",

    "version" : "1.0",

    "manifest_version" : 3,

    "background" : {
        "service_worker" : "background.js"
    },

    "permissions": [
        "activeTab",
        "scripting"
    ],

    "options_page": "about.html",
    "action" : {
        "default_popup" : "popup.html"
    },

    "icons" : {
        "16" : "/images/pen_16.png",
        "32" : "/images/pen_32.png",
        "48" : "/images/pen_48.png"
    }

}